---
interface Props {
	text: string;
	width?: string;
	height?: string;
	bgColor?: string;
	hoverColor?: string;
	fontWeight?: string;
	fontSize?: string;
	icon?: string;
}

const {
	text,
	width = "120px",
	height = "38px",
	bgColor = "var(--primary-color)",
	hoverColor = "var(--primary-color-hover)",
	fontWeight,
	fontSize,
	icon,
} = Astro.props;
---

<a
	href="#"
	class="donate-button"
	style={`width: ${width}; height: ${height}; background-color: ${bgColor}; font-weight: ${fontWeight}; font-size: ${fontSize};`}
	onmouseover={`this.style.backgroundColor='${hoverColor}'`}
	onmouseout={`this.style.backgroundColor='${bgColor}'`}
>
	{icon && <span class="icon" set:html={icon} />}
	{text}
</a>

<style>
	.donate-button {
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-dark);
		gap: 10px;
		overflow: hidden;
		border-radius: 5px;
		transition: background-color 0.3s ease-in-out;
	}

	.icon {
		width: 20px;
		height: 20px;
	}

	.icon svg {
		width: 100%;
		height: 100%;
	}
</style>
