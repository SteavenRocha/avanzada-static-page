        display: -webkit-box;
        -webkit-line-clamp: 11;
        -webkit-box-orient: vertical;
    }

    .miniatura {
        width: 100%;
        object-fit: cover;
        cursor: pointer;
        transition: 0.5s ease;
        -webkit-box-shadow: 0px 0px 5px 3px rgba(0, 0, 0, 0.49);
        -moz-box-shadow: 0px 0px 5px 3px rgba(0, 0, 0, 0.49);
        box-shadow: 0px 0px 5px 3px rgba(0, 0, 0, 0.49);
    }

    .content-left:hover .miniatura,
    .content-left:hover .btn-play {
        scale: 1.02;
    }

    .btn-play {
        display: flex;
        position: absolute;
        top: 50%;
        font-size: 2rem;
        background-color: transparent;
        padding: 5px;
        font-weight: 600;
        cursor: pointer;
        color: #dbdbdbe5;
        transform: translate(0, -50%);
        transition: 0.5s ease;
        user-select: none;
    }

    .btn-play svg {
        width: 125px;
    }

    /* Estilos de la Modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.664);
        align-items: center;
        justify-content: center;
        animation: fadeIn 0.3s ease-in-out;
    }

    .modal.closing {
        animation: fadeOut 0.3s ease-in-out;
    }

    .modal video {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 800px;
        object-fit: cover;
        border: 1px solid var(--primary-color);
    }

    .close {
        position: absolute;
        display: flex;
        align-items: center;
        justify-content: center;
        top: 10px;
        right: 20px;
        width: 50px;
        height: 50px;
        font-size: 50px;
        cursor: pointer;
        color: rgb(255, 255, 255);
    }

    .close svg {
        width: 40px;
        height: 40px;
    }

    .close:hover {
        background-color: rgba(0, 0, 0, 0.397);
    }

    @media (max-width: 900px) {
        .modal video {
            width: 90%;
        }
    }

    @media (max-width: 1150px) {
        .container {
            padding-top: 50px;
            padding-bottom: 50px;
            gap: 50px;
        }

        .content {
            display: block;
            justify-content: center;
        }

        .content-left {
            margin-bottom: 50px;
        }

        .content-right p {
            width: 100%;
        }

        .miniatura {
            width: 100%;
        }
    }

    @media (max-width: 650px) {
        .btn-play svg {
            width: 80px;
        }

        .container {
            padding: 30px 5%;
            gap: 30px;
        }

        .content-left {
            margin-bottom: 30px;
        }
    }

    /* Animación para el modal */
    @keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }
</style>
