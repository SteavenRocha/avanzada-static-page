<style>
    section {
        background-color: var(--color-white);
        padding: 0 8%;
        height: auto;
        overflow: hidden;
        display: flex;
        align-items: center;
    }

    .container {
        width: 100%;
        margin: 0 auto;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-bottom: 7rem;
        gap: 2.56rem;
    }

    .mision,
    .vision {
        display: flex;
        position: relative;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 100%;
    }

    .center__image {
        display: flex;
        justify-content: center;
    }

    .center__img {
        position: relative;
        width: 100%;
        min-width: 360px;
        max-width: 360px;
        height: 460px;
        border-radius: 20%;
        overflow: hidden;
    }

    .center__img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 600ms;
    }

    .mision__name,
    .vision__name {
        display: inline-flex;
        gap: 5px;
        align-items: center;
        font-weight: 400;
        font-size: clamp(0.875em, 4vw + 1rem, 1em);
        margin-bottom: 11px;
        position: relative;
        /*        align-self: center; */
        text-transform: uppercase;
        color: var(--color-text-dark);
        padding-bottom: 5px;
        border-bottom: 2px solid var(--color-text-dark);
    }

    .mision__paragraph,
    .vision__paragraph {
        font-weight: 400;
        font-size: clamp(0.875em, 4vw + 1rem, 1.215em);
        color: var(--color-text-light);
    }

    .mision__name svg,
    .vision__name svg {
        width: 1em;
        height: 1em;
    }

    @media screen and (max-width: 1150px) {
        section {
            padding: 0rem 5%;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(2, 1fr);
            gap: 1.56rem;
        }

        .mision {
            grid-column: 1/3;
            grid-row: 1/2;
        }

        .vision {
            grid-column: 1/3;
            grid-row: 2/3;
        }

        .center__image {
            grid-column: 3/4;
            grid-row: 1/3;

            width: 100%;
        }

        .center__img {
            display: flex;
            justify-content: center;
            max-height: 350px;
            max-width: 400px;
        }

        .center__img img {
            width: auto;
        }

        .center__image {
            order: 3;
        }
    }

    @media screen and (max-width: 870px) {

        .container {
            display: flex;
            flex-direction: column;
        }
    }

    @media screen and (max-width: 595px) {
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .mision {
            text-align: center;
            align-items: center;
            order: 1;
        }

        .vision {
            text-align: center;
            align-items: center;
            order: 3;
        }

        .center__image {
            order: 2;
        }

        .center__img {
            display: flex;
            justify-content: center;
            max-height: 300px;
            max-width: 360px;
        }

        .center__img img {
            width: auto;
        }
    }
</style>