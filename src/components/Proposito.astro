<style>
    section {
        padding: 100px 5%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 100px;
        overflow: hidden;
    }

    .textos {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .textos h1 {
        font-size: clamp(2.5em, 4vw + 1rem, 3.5em);
        color: var(--color-dark);
        line-height: 1.1;
        text-align: center;
    }

    .textos p {
        font-size: clamp(0.5em, 4vw + 1rem, 1.2em);
        width: 60%;
        color: var(--color-text);
        text-align: center;
    }

    .textos span {
        color: var(--primary-color);
    }

    .cards {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
        border-radius: 10px;
        padding: 30px;
        gap: 20px;
        cursor: default;
        border: 2px solid var(--primary-color);
        transition: transform 0.3s ease;
    }

    .card p {
        font-size: clamp(0.5em, 4vw + 1rem, 1em);
        color: var(--color-text);
    }

    .card:hover {
        transform: scale(1.025);
        border-color: var(--primary-color-dark);
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
    }

    .encabezado {
        display: flex;
        align-items: center;
        justify-content: start;
        flex-direction: row;
        gap: 10px;
    }

    .encabezado h1 {
        color: var(--color-dark);
        font-size: clamp(1em, 4vw + 1rem, 1.5em);
    }

    .encabezado svg {
        color: var(--primary-color);
        width: 50px;
        height: 50px;
    }

    .contenido {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .cita {
        margin: 50px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        text-align: center;
    }

    .cita h1 {
        font-size: clamp(1em, 4vw + 1rem, 2.5em);
        font-weight: 300;
        color: var(--color-text);
    }

    .cita span {
        color: var(--primary-color);
    }

    .cita svg {
        width: 50px;
        height: 50px;
        color: var(--primary-color);
    }

    .cita-container {
        position: relative;
        width: 60%;
    }

    .comilla-izq {
        position: absolute;
        left: -10%;
        top: 0;
        transform: translateY(-40%);
    }

    .comilla-der {
        position: absolute;
        right: -10%;
        bottom: 0;
        transform: translateY(40%);
    }

    .cita h2 {
        font-size: clamp(0.5em, 4vw + 1rem, 1em);
        font-weight: 300;
        color: var(--color-text);
        position: relative;
        text-align: center;
    }

    .cita h2::before {
        content: "";
        display: block;
        width: 50px;
        height: 2px;
        background-color: var(--primary-color);
        margin: 0 auto 10px auto;
    }

    @media (max-width: 950px) {
        .cards {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }
        
        .card:nth-child(3) {
            grid-column: span 2; 
        }

        .cita-container {
            width: 80%;
        }
    }

    @media (max-width: 650px) {
        .textos p {
            width: 100%;
        }

        .cards {
            display: flex;
            flex-direction: column;
        }
    }
</style>
