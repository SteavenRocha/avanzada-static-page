<!-- Modal -->
<div id="videoModal" class="modal">
    <span class="close">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            ><path
                d="M10.5859 12L2.79297 4.20706L4.20718 2.79285L12.0001 10.5857L19.793 2.79285L21.2072 4.20706L13.4143 12L21.2072 19.7928L19.793 21.2071L12.0001 13.4142L4.20718 21.2071L2.79297 19.7928L10.5859 12Z"
            ></path></svg
        >
    </span>
    <video
        id="modalVideo"
        src="public/videos/video-presentacion.mp4"
        controls
        muted
        autoplay></video>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const videoTrigger = document.getElementById(
            "videoTrigger",
        ) as HTMLVideoElement;
        const modal = document.getElementById("videoModal") as HTMLDivElement;
        const modalVideo = document.getElementById(
            "modalVideo",
        ) as HTMLVideoElement;
        const closeBtn = document.querySelector(".close") as HTMLSpanElement;
        const btnPlay = document.querySelector(".btn-play") as HTMLDivElement;

        if (videoTrigger && modal && modalVideo && closeBtn && btnPlay) {
            const openModal = () => {
                modal.style.display = "flex";
                modal.classList.remove("closing");
                modalVideo.play();
            };

            const closeModal = () => {
                modal.classList.add("closing");
                setTimeout(() => {
                    modal.style.display = "none";
                    modalVideo.pause();
                }, 300);
            };

            videoTrigger.addEventListener("click", openModal);
            btnPlay.addEventListener("click", openModal);

            closeBtn.addEventListener("click", closeModal);

            window.addEventListener("click", (event: MouseEvent) => {
                if (event.target === modal) {
                    closeModal();
                }
            });
        }
    });
</script>

<style>
    section {
        position: relative;
        box-sizing: border-box;
        height: auto;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        padding: 60px 10%;
        gap: 60px;
    }

    .title {
        text-align: center;
    }

    .title h1 {
        text-transform: uppercase;
        font-size: clamp(1.5em, 4vw + 1rem, 2.5em);
        color: var(--primary-color);
        font-weight: bold;
    }

    .content {
        display: flex;
        align-items: center;
        justify-content: center;
