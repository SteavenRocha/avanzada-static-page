<style>
    section {
        padding: 80px 5%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--color-white);
        overflow: hidden;
    }

    .textos {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .textos h1 {
        font-size: var(--font-size-titulo);
        font-weight: 600;
        color: var(--color-dark);
        line-height: 1.1;
        text-align: center;
    }

    span {
        color: var(--primary-color);
    }

    .productos {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 1fr);
        max-width: 1500px;
        padding-top: 50px;
        padding-bottom: 25px;
        gap: 15px;
    }

    .card-producto {
        position: relative;
    }

    .img {
        overflow: hidden;
        cursor: pointer;
        height: 100%;
        border-radius: 10px;
    }

    .img:hover img {
        transform: scale(1.025);
        filter: brightness(0.7);
    }

    img {
        width: 100%;
        height: 100%;
        border-radius: 10px;
        object-fit: cover;
        transition:
            transform 0.5s ease,
            filter 0.5s ease;
    }

    .nombre-pan {
        position: absolute;
        color: var(--color-white);
        padding-left: 10px;
        padding-bottom: 20px;
        padding-right: 10px;
        display: flex;
        left: 0;
        bottom: 0;
        opacity: 0;
        visibility: hidden;
        transform: translateY(10px);
        transition:
            transform 0.3s ease,
            opacity 0.3s ease,
            visibility 0.3s ease;
    }

    .card-producto:hover .nombre-pan {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    @media (max-width: 750px) {
        .productos {
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(3, 1fr);
        }

        .nombre-pan h1 {
            font-size: 1em;
        }
    }
</style>
