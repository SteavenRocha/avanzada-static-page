<style>
    section {
        /* background-color: var(--color-white); */
        padding: 0 8%;
        height: auto;
        overflow: hidden;
        display: flex;
        align-items: center;
    }

    .container {
        width: 100%;
        margin: 0 auto;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-bottom: 7rem;
        gap: 3rem;
    }

    .image {
        display: flex;
        justify-content: center;
        position: relative;
        width: 50%;
        border-radius: 5px;
        overflow: hidden;
        -webkit-box-shadow: 0px 0px 11px 0px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 0px 0px 11px 0px rgba(0, 0, 0, 0.75);
        box-shadow: 0px 0px 11px 0px rgba(0, 0, 0, 0.75);
    }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 600ms;
    }

    .content {
        width: 50%;
        display: flex;
        flex-direction: column;
        gap: 1.56rem;
    }

    .mision,
    .vision {
        display: flex;
        flex-direction: column;
        position: relative;
        justify-content: center;
        align-items: start;
        width: 100%;
    }

    .mision__content,
    .vision__content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 50%;
        height: 100%;
    }

    .mision__name,
    .vision__name {
        display: inline-flex;
        gap: 5px;
        align-items: center;
        font-weight: 400;
        font-size: clamp(1.215em, 4vw + 1rem, 1.315em);
        margin-bottom: 11px;
        position: relative;
        /*        align-self: center; */
        text-transform: uppercase;
        color: var(--color-text-dark);
        padding-bottom: 5px;
        border-bottom: 2px solid var(--color-text-dark);
    }

    .mision__paragraph,
    .vision__paragraph {
        font-weight: 400;
        font-size: clamp(0.875em, 4vw + 1rem, 1.215em);
        color: var(--color-text-light);
    }

    .mision__name svg,
    .vision__name svg {
        width: 1em;
        height: 1em;
    }

    @media screen and (max-width: 1150px) {
        section {
            padding: 0rem 5%;
        }

        .container {
            gap: 1.56rem;
        }
    }

    @media screen and (max-width: 1080px) {
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 2.56rem;
        }

        .mision {
            order: 1;
        }

        .vision {
            order: 3;
        }

        .image, .content {
            width: 100%;
        }

        .image {
            order: 2;
        }
    }

    @media screen and (max-width: 595px) {
        .mision {
            text-align: center;
            align-items: center;
        }

        .vision {
            text-align: center;
            align-items: center;
        }
    }
</style>
