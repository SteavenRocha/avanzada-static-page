        display: flex;
        height: 100%;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .content-left {
        flex: 0.8;
    }

    .content-right {
        flex: 1;
    }

    .content-right p {
        font-weight: 400;
        /*     font-size: 1.4rem; */
